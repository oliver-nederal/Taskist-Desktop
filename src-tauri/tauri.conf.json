{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Taskist",
  "version": "0.0.2",
  "identifier": "com.olivernederal.taskist",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 1000,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFGREM3MDNGRTVBRkQ4RDEKUldUUjJLL2xQM0RjSHk5Tm1lYTFjUzNFMWpLNmwvQTRPbTEwM0REVXpRWnI4WFJqb1FyVkVOMU8K",
      "endpoints": [
        "https://github.com/oliver-nederal/Taskist-Desktop/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
